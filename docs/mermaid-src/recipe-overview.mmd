        CRUSH["CrushedCharcoal"]
        PURIFY["PurifiedCharcoal"]
        POTASH["Potash"]
        KNO3["KNO3 Powder"]
        SULPHUR["SulphurPowder"]
        GUNPOWDER["GunPowder"]
    end

    subgraph BD["Biodiesel Pathway (Steps 1-5)"]
        CRUDE_OIL["CrudeVegetableOil"]
